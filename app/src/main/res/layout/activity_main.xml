        android:id="@+id/end_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂停"/>
    <Button
        android:id="@+id/jixu_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="继续"/>

